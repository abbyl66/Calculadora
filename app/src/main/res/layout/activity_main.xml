<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/buttonlayout"
        android:layout_marginBottom="70dp"
        >

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="true"
            android:paddingTop="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#4A4A4A"
            android:textSize="50sp"
            android:verticalScrollbarPosition="right"
            tools:ignore="SpeakableTextPresentCheck"></EditText>

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textSize="25sp"

            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <android.widget.Button
                android:id="@+id/buttonclear"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="C"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="7"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="4"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="1"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button0"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="#D6D6D6"
                android:text="0"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/buttonDec"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="DEC"
                android:textStyle="bold"
                android:textColor="#D6BAA9"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="8"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="5"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="2"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonpunto"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#D6D6D6"
                android:text="."
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/buttononec"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="โซ"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button9"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="9"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="6"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/button3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="3"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonBin"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#D6D6D6"
                android:text="Bin"
                android:textStyle="bold"
                android:textColor="#D6BAA9"
                android:textSize="28sp"
                android:gravity="center"></android.widget.Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/buttondiv"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#EACFBE"
                android:text="รท"
                android:textSize="34sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonmul"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#EACFBE"
                android:text="x"
                android:textSize="25sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonmenos"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#EACFBE"
                android:text="-"
                android:textSize="34sp"
                android:gravity="center"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/buttonmas"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="#EACFBE"
                android:text="+"
                android:textSize="34sp"
                android:gravity="center"></android.widget.Button>


            <android.widget.Button
                android:id="@+id/buttonigual"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginBottom="-5dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#EACFBE"
                android:text="="
                android:textSize="34sp"
                android:gravity="center"></android.widget.Button>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>